{
  "name": "chat2poster",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "description": "chat2poster - Turn AI chats into share-worthy posters.",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicepkg/chat2poster.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:extension": "turbo run dev --filter=@chat2poster/extension",
    "dev:web": "turbo run dev --filter=@chat2poster/web",
    "dev:packages": "turbo run dev --filter='./packages/*'",
    "build": "turbo run build",
    "build:extension": "turbo run build --filter=@chat2poster/extension",
    "build:web": "turbo run build --filter=@chat2poster/web",
    "build:packages": "turbo run build --filter='./packages/*'",
    "start:web": "pnpm --filter @chat2poster/web start",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist apps/*/node_modules apps/*/.next apps/*/.open-next apps/*/.output .turbo **/.turbo",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@commitlint/types": "^20.4.0",
    "eslint": "catalog:tooling",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "prettier": "catalog:tooling",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.1",
    "typescript": "catalog:tooling",
    "typescript-eslint": "catalog:tooling"
  }
}
