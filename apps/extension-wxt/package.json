{
  "name": "@chat2poster/extension",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Browser extension for chat2poster - export AI chats as images",
  "scripts": {
    "dev": "wxt dev",
    "dev:firefox": "wxt dev --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --browser firefox",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@chat2poster/core-adapters": "workspace:*",
    "@chat2poster/core-export": "workspace:*",
    "@chat2poster/core-pagination": "workspace:*",
    "@chat2poster/core-schema": "workspace:*",
    "@chat2poster/shared-ui": "workspace:*",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wxt": "^0.20.13"
  }
}
