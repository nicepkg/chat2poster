{
  "name": "@chat2poster/extension",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Browser extension for chat2poster - export AI chats as images",
  "scripts": {
    "dev": "wxt dev",
    "dev:firefox": "wxt dev --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --browser firefox",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@chat2poster/core-adapters": "workspace:*",
    "@chat2poster/core-export": "workspace:*",
    "@chat2poster/core-pagination": "workspace:*",
    "@chat2poster/core-renderer": "workspace:*",
    "@chat2poster/core-schema": "workspace:*",
    "@chat2poster/shared-ui": "workspace:*",
    "@chat2poster/shared-utils": "workspace:*",
    "@chat2poster/themes": "workspace:*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "@tailwindcss/postcss": "^4.1.10",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wxt": "^0.20.5"
  }
}
