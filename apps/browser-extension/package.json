{
  "name": "@chat2poster/extension",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Browser extension for chat2poster - export AI chats as images",
  "scripts": {
    "dev": "wxt dev",
    "dev:firefox": "wxt dev --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --browser firefox",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@chat2poster/core-adapters": "workspace:*",
    "@chat2poster/core-export": "workspace:*",
    "@chat2poster/core-pagination": "workspace:*",
    "@chat2poster/core-schema": "workspace:*",
    "@chat2poster/shared-ui": "workspace:*",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "catalog:tooling",
    "@types/react": "catalog:tooling",
    "@types/react-dom": "catalog:tooling",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "catalog:tooling",
    "vitest": "catalog:tooling",
    "wxt": "^0.20.13"
  }
}
