{
  "name": "@chat2poster/core-export",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Export engine for chat2poster (SnapDOM, SVG fallback, ZIP packaging)",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@chat2poster/core-schema": "workspace:*",
    "@zumer/snapdom": "^2.0.2",
    "fflate": "^0.8.2"
  },
  "devDependencies": {
    "@types/node": "catalog:tooling",
    "tsup": "catalog:tooling",
    "typescript": "catalog:tooling",
    "vitest": "catalog:tooling"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
