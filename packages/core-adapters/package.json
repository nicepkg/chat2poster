{
  "name": "@chat2poster/core-adapters",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Adapter registry and implementations for parsing conversations from various sources",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "development": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./src/index.ts"
    },
    "./adapters/*": {
      "types": "./dist/adapters/*.d.ts",
      "development": "./src/adapters/*.ts",
      "import": "./dist/adapters/*.js"
    },
    "./network/*": {
      "types": "./dist/network/*.d.ts",
      "development": "./src/network/*.ts",
      "import": "./dist/network/*.js"
    },
    "./extension-sites": {
      "types": "./dist/extension-sites/index.d.ts",
      "development": "./src/extension-sites/index.ts",
      "import": "./dist/extension-sites/index.js"
    },
    "./extension-types": {
      "types": "./dist/extension-types.d.ts",
      "development": "./src/extension-types.ts",
      "import": "./dist/extension-types.js"
    },
    "./registry": {
      "types": "./dist/registry.d.ts",
      "development": "./src/registry.ts",
      "import": "./dist/registry.js"
    },
    "./base": {
      "types": "./dist/base.d.ts",
      "development": "./src/base.ts",
      "import": "./dist/base.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@chat2poster/core-schema": "workspace:*",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "catalog:tooling",
    "jsdom": "^27.4.0",
    "tsup": "catalog:tooling",
    "typescript": "catalog:tooling",
    "vitest": "catalog:tooling"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
